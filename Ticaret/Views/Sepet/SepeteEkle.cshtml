@model Ticaret.Models.Sepet
@{
    ViewBag.Title = "SepeteEkle";
}

<h2>SepeteEkle</h2>

@using (Html.BeginForm("SepeteEkle", "Sepet", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.urun_id, "Ürün ID")
        @Html.TextBoxFor(model => model.urun_id, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.urun_id, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.adet, "Adet")
        @Html.TextBoxFor(model => model.adet, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.adet, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Sepete Ekle</button>
}