@model IEnumerable<Ticaret.Models.Urunler>

@{
    ViewBag.Title = "Ürünler";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}


<div class="form-actions no-color" style="display: inline-block; text-align: center;">
    @Html.ActionLink("Yeni Ürün Oluştur", "Create", "Urunler", null, new { @class = "btn btn-success" })
</div>
<h2></h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.urun_adi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.aciklamasi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fiyat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.stok)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.kategoriler.kategori_ad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Saticilar.sirket_adi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.picture)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.urun_adi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.aciklamasi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fiyat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stok)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.kategoriler.kategori_ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Saticilar.sirket_adi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.picture)
            </td>

            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.urun_id }) |
                @Html.ActionLink("Detaylar", "Details", new { id = item.urun_id }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.urun_id })
            </td>
        </tr>
    }

</table>
