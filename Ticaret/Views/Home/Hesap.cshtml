
@model Ticaret.Models.Musteriler

@{
    Layout = null;
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        #login-div {
            max-width: 400px;
            margin: 100px auto;
            padding: 20px;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .form-control {
            margin-bottom: 10px;
        }

        .btn-login {
            width: 100%;
        }

        .field-validation-error {
            color: red;
        }

        .alert {
            margin-bottom: 20px;
        }

        .form-header {
            text-decoration: underline;
            text-align: center;
            margin-bottom: 20px;
        }

        .btn-group {
            display: flex;
            justify-content: space-between;
        }
    </style>
</head>
<body>
    <div id="login-div">
        <h2 class="form-header">Giriş Yapınız</h2>

        @using (Html.BeginForm("Autherize", "Home", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.kullanici_adi)
                @Html.EditorFor(model => model.kullanici_adi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.kullanici_adi, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.sifre)
                @Html.EditorFor(model => model.sifre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sifre, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label class="field-validation-error">
                    @Html.DisplayFor(model => model.LoginErrorMessage)
                </label>
            </div>

            <div class="btn-group">
                <input type="submit" value="Giriş Yap" class="btn btn-primary btn-login" />
                <input type="reset" value="Temizle" class="btn btn-secondary btn-login" />
            </div>

            <div class="text-center mt-3">
                <button type="button" onclick="window.location.href='@Url.Action("Create", "Musterilers")'" class="btn btn-link">Üye Değilsen Üye Ol</button>
            </div>

            <div class="text-center mt-3">
                <button type="button" onclick="window.location.href='@Url.Action("Index", "Admin")'" class="btn btn-link">Admin Girişi</button>
            </div>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
</body>
</html>