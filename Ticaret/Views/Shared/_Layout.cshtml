<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TrendSepet</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <style>
        .nav-link:hover {
            transform: scale(1.10);
        }
        .navbar-brand:hover {
            transform: scale(1.10);
        }
    </style>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("TrendSepet", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Gezintiyi aç/kapat" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Hakkımızda", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("İletişim", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Ürünler", "Index1", "Urunler", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Favoriler", "Index", "Favoriler", new { area = "" }, new { @class = "nav-link" })</li>

                </ul>
                <ul class="navbar-nav ml-auto">
                    <li>
                        <a class="nav-link" href="@Url.Action("Index1", "Siparisler")">
                           Siparişlerim <i class="fa fa-shopping-cart"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Sepet")">
                            Sepet
                            @if (ViewBag.SepetUrunSayisi != null && (int)ViewBag.SepetUrunSayisi > 0)
                            {
                                <span class="badge badge-primary ml-2">(@ViewBag.SepetUrunSayisi)</span>
                            }
                            else
                            {
                                <span class="badge badge-primary ml-2">(@ViewBag.SepetUrunSayisi)</span>
                            }
                        </a>
                    </li>
                  
                    <li>
                        <a class="nav-link" href="@Url.Action("Hesabım", "Home")">
                            Hesabım <i class="fa fa-user"></i>
                        </a>
                    </li>

                </ul>

            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - TrendSepet</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">