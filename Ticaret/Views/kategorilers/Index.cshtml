@model IEnumerable<Ticaret.Models.kategoriler>

@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="form-actions no-color" style="display: inline-block; text-align: center;">
    @Html.ActionLink("Yeni Kategori Oluştur", "Create", "kategorilers", null, new { @class = "btn btn-success" })
</div>
<h2></h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.kategori_ad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.kategori_resim)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.kategori_ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.kategori_resim)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.kategori_id }) |
                @Html.ActionLink("Detaylar", "Details", new { id = item.kategori_id }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.kategori_id })
            </td>
        </tr>
    }

</table>
