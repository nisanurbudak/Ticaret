@model Ticaret.Models.Saticilar

@{
    ViewBag.Title = "Sil";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div style="text-align: center;">
    <h3 style="color: red;">Bu Satıcıyı Silmek İstediğine Emin Misin?</h3>

    <div>
        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color" style="display: inline-block; text-align: center;">
                <input type="submit" value="Sil" class="btn btn-danger" style="margin-right: 10px;" />
                @Html.ActionLink("Geri Dön", "Index", "Saticilar", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>